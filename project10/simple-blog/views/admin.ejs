<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Simple Blog</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <h1>Simple Blog</h1>
    <a href="/logout">Logout</a> | <a href="/create">Create Post</a>
    <ul>
        <% posts.forEach(post => { %>
            <li>
                <h2><%= post.title %></h2>
                <p><%= post.content %></p>
                <small><%= post.created_at %></small>
                <a href="/post/<%= post.id %>">Read more</a>
                <form method="get" action="/edit/<%= post.id %>" style="display: inline;">
                <button>Edit</button>
                </form>
                <form method="post" action="/delete/<%= post.id %>?_method=DELETE" style="display: inline;">
                <button>Delete</button>
                </form>
            </li>
        <% }) %>
    </ul>
</body>
</html>
