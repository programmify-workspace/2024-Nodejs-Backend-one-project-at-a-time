<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Simple Blog</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <h1>Simple Blog</h1>
    <a href="/login">Login</a> | <a href="/register">Register</a> | <a href="/create">Create Post</a>
    <ul>
        <% posts.forEach(post => { %>
            <li>
                <h2><%= post.title %></h2>
                <p><%= post.content %></p>
                <small><%= post.created_at %></small>
                <a href="/post/<%= post.id %>">Read more</a>
            </li>
        <% }) %>
    </ul>
</body>
</html>
