<!DOCTYPE html>
<html>
<head>
    <title>User Management</title>
    <link rel="stylesheet" type="text/css" href="./style.css">
    <script src="./main.js"></script>
</head>
<body>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f2f2f2;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .container {
            background-color: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            width: 80%;
            height: 75%;
            overflow: auto;
        }

        h2 {
            text-align: center;
            margin-bottom: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #4CAF50;
            color: white;
        }

        tr:hover {
            background-color: #f5f5f5;
        }

        button {
            padding: 8px 12px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            margin-right: 5px;
        }

        .edit-btn {
            background-color: #f0ad4e;
            color: white;
        }

        .edit-btn:hover {
            background-color: #ec971f;
        }

        .delete-btn {
            background-color: #d9534f;
            color: white;
        }

        .delete-btn:hover {
            background-color: #c9302c;
        }

        #form-container {
            position: fixed;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            width: 100%;
            height: 100%;
            z-index: 100;
            background-color: rgba(0, 0, 0, 0.5);
        }

        #form-container form {
            display: flex;
            flex-direction: column;
            justify-content: space-around;
            align-items: center;
            height: 80%;
            width: 70%;
            background-color: #fff;
            padding: 20px;
            border-radius: 10px;
        }

        #form-container form div {
            width: 80%;
        }

        #form-container form div input {
            padding: 3%;
            font-size: 17px;
        }

        #form-container form div button[type="submit"] {
            padding: 25px;
            font-weight: 600;
        }

        #form-container form h2 {
            font-weight: 700;
            font-size: 36px;
        }

        #form-container.hidden {
            display: none;
        }
        
        .container table button {
            margin-top: 3%;
        }

        .register-btn-container {
            display: flex;
            justify-content: flex-end;
            width: 100%;
        }

        .register-btn-container .register-btn {
            font-size: 21px;
            padding: 2%;
            color: #fff;
            background-color: #4CAF50;
            text-decoration: none;
        }

        .register-btn-container .register-btn:hover {
            background-color: #38863b;
        }

    </style>
    <div class="register-btn-container">
        <a href="./register" class="register-btn">Register New User</a>
    </div>
    <div class="container">
        <h2>User Management</h2>
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Password</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(function(user) { %>
                <tr>
                    <td><%= user.name %></td>
                    <td><%= user.email %></td>
                    <td><%= user.password %></td>
                    <td>
                        <button class="edit-btn" data-id="<%= user.id %>" data-name="<%= user.name %>" data-email="<%= user.email %>" data-password="<%= user.password %>" title="Edit">Edit</button>
                        <form action="/delete" method="post">
                            <input type="hidden" name="id" value="<%= user.id %>">
                            <button class="delete-btn" type="submit" title="Delete">Delete</button>
                        </form>
                    </td>
                </tr>
                <% }); %>
            </tbody>
        </table>
    </div>

    <div id="form-container" class="hidden">
        <form action="/update" method="post">
            <h2>Update User</h2>
            <input type="hidden" name="id" id="user-id">
            <div>
                <input type="text" id="name" name="name" placeholder="name" required>
            </div>
            <div>
                <input type="email" id="email" name="email" placeholder="email" required>
            </div>
            <div>
                <input type="text" id="password" name="password" placeholder="password" required>
            </div>
            <div>
                <button type="submit">Update</button>
            </div>
        </form>
    </div>
</body>
</html>
